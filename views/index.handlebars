<header class="container">
  <h1>Eat-Da-Burger!</h1>
</header>

<section class="container">
  <h2>EAT?</h2>
  <ul>
    {{#each burgers }}
    {{#unless devoured }}
    <li>{{burger_name}}</li>
    {{/unless}}
    {{/each}}
  </ul>
</section>

<section class="container">
  <h2>FINISHED</h2>
  <ul>
    {{#each burgers }}
    {{#if devoured}}
    <li>{{burger_name}}</li>
    {{/if}}
    {{/each}}
  </ul>
</section>

<section class = "container my-5"> 
  <h5>Enter a burger you want to eat!</h5>
  <form action="/api/burgers" method = "POST">
    <div class="input-group mb-3">
      <input name = "burger_name" type="text" class="form-control" placeholder="Burger Name" aria-label="insert burger name">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="submit" >Submit</button>
      </div>
    </div>
  </form>
</section>